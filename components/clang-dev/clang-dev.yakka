name: Clang development

includes:
  global:
    - include

supports:
  components:
    clang:
      flags:
        ld:
          global:
            - '{% for p in configuration.path %}-Wl,-L"{{ absolute_path(p) }}" {% endfor %}'
            - -rpath @executable_path 
            - -lclang
    xcode:
      flags:
        ld:
          global:
            - '-Wl,-L"/Library/Developer/CommandLineTools/usr/lib/"
            - -rpath @executable_path 
            - -lclang
    msvc:
      flags:
        ld:
          global:
            - "-LIBPATH:C:/Program Files/LLVM/lib"
            - libclang.lib

